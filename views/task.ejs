<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (tasks.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Project</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Location</th>
                        <th scope="col">Priority</th>
                        <th scope="col">Start At</th>
                        <th scope="col">Deadline</th>
                        <th scope="col">Completed</th>
                        <th scope="col">Fixed</th>
                        <th scope="col">Action</th> 
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach((task, index) => { %>
                        <tr>
                            <th scope="row"><%= index %></th>
                            <td><%= task.title %> </td>
                            <td><%= task.description %></td>
                            <td><%= task.location %></td>
                            <td><%= task.priority %></td>
                            <td><%= task.start_at %></td>
                            <td><%= task.deadline %></td>
                            <td>@<%= task.completed %></td>
                            <td>@<%= task.fixed %></td>
                            <td>
                                <a href="/<%= username %>/project/<%= projectId %>/task/<%= task.id %>/update/<%= task.detail_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/<%= username %>/project/<%= projectId %>/task/<%= task.id %>/delete/<%= task.detail_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No task found. Go <a href="/<%= username %>/project/<%= projectId %>/task/create" >here</a> to add task.</p>
        <% } %>
    </div>
</div>
</body>
</html>