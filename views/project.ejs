<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (projects.length > 0) {%>
            <% if (message.length > 0) { %>
             <div class="alert alert-danger col-sm-12"><%= message %></div>
             <% } %>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Project</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Location</th>
                        <th scope="col">Priority</th>
                        <th scope="col">Start At</th>
                        <th scope="col">Deadline</th>
                        <th scope="col">Completed</th>
                        <th scope="col">Fixed</th>
                        <th scope="col">Tasks</th> 
                        <th scope="col">Action</th> 
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach((project, index) => { %>
                        <tr>
                            <th scope="row"><%= index %></th>
                            <td><%= project.title %> </td>
                            <td><%= project.description %></td>
                            <td><%= project.location %></td>
                            <td><%= project.priority %></td>
                            <td><%= project.start_at %></td>
                            <td><%= project.deadline %></td>
                            <td><%= project.completed %> </td>
                            <td><%= project.fixed %></td>
                            <td>
                                <a href="/<%= username %>/project/<%= project.id %>/task/all" target="_blank" rel="noopener" class="btn btn-sm btn-success">Tasks</a>
                            </td>
                            <td>
                                <a href="/<%= username %>/project/<%= project.id %>/update/<%= project.detail_id%>" target="_blank" rel="noopener" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/<%= username %>/project/delete/<%= project.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No project found. Go <a href="/<%= username %>/project/create" >here</a> to add project.</p>
        <% } %>
    </div>
</div>
</body>
</html>